@model SneakerWeb.Models.Admin

@{
    ViewBag.Title = "Chitiettk";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="a">Chi Tiết Tài Khoản</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên tài khoản
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserAdmin)
        </dd>

        <dt>
            Họ và tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hoten)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            <img src="@Url.Content("~/images/"+  Model.Hinh)" width="180" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Quay về", "Tkadmin", new { id = Model.UserAdmin }, new { @class = "button" }) |
</p>
<style>
    .button {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }
    .a {
        color: blue;
        font: bold;
    }
</style>