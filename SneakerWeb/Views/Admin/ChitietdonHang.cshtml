@model SneakerWeb.Models.ChiTietDonHang

@{
    ViewBag.Title = "ChitietdonHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="a">Chi Tiết Đơn Hàng</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã Sản Phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaSanPham)
        </dd>
        <dt>
            Mã Đơn Hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaDonHang)
        </dd>
        <dt>
            Số Lượng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluong)
        </dd>

        <dt>
           Đơn Giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dongia)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Quay về", "Donhang", new { id = Model.MaDonHang }, new { @class = "button" })
</p>
<style>
    .button {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }
    .a{
        color: blue;
        font:bold;
    }
</style>
