@model IEnumerable<SneakerWeb.Models.Admin>

@{
    ViewBag.Title = "Tkadmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2 class="a">Thông Tin Quản Trị</h2>
<table class="table">
    <tr>
        <th style=" width:200px"> Tên tài khoản </th>
        <th style=" width:200px"> Họ Tên </th>
        <th style=" width:200px"> Hình ảnh </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.UserAdmin)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Hoten)
    </td>
    <td>
        <img src="@Url.Content("~/images/" + item.Hinh) " width="180"/>
    </td>
    <td>
        @Html.ActionLink("Chi tiết", "Chitiettk", new { id = item.UserAdmin }, new { @class = "button3" }) |
        @Html.ActionLink("Xóa", "Xoatk", new { id = item.UserAdmin }, new { @class = "button4" })
    </td>
</tr>
}

</table>
