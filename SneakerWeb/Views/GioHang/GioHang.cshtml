@using SneakerWeb.Models
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<br>
<br>
<h3 style="text-align: center; font-size: 26px; line-height: 24px;">GIỎ HÀNG CỦA BẠN</h3>
<br>
<br>
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold">
        <td>  Mã Sản Phẩm </td>
        <td> Tên Sản Phẩm </td>
        <td> Ảnh  </td>
        <td> Số lượng </td>
        <td> Đơn giá </td>
        <td> Thành tiền </td>
        <td width="50px"></td>
        <td width="50px"></td>
        <td width="50px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td> @item.iMaSanPham </td>
            <td> @item.sTenSanPham</td>
            <td><img src="~/images/@item.sImages" style="width:245px; height:245px"></td>
            @using (Html.BeginForm("CapnhatGiohang", "GioHang", new { @iMaSp = item.iMaSanPham }))
            {
                <td>
                    <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="background-color:yellow;max-width:50px" />
                </td>
                <td>@String.Format("{0:0,0}", item.dDongia) </td>
                <td>@String.Format("{0:0,0}", item.dThanhtien) </td>
                <td> <a href="@Url.Action("ChiTiet","Home", new { id = item.iMaSanPham})"> Chi tiết </a></td>
                <td> @Html.ActionLink("Xóa", "XoaGiohang", new { @iMaSp = item.iMaSanPham })</td>
                <td> <input type="submit" value="Cập Nhật" /></td>
            }
        </tr>
    }
    <tr style="font-weight: bold; text-align:right; color:red">
        <td colspan="4"> Số lượng : @ViewBag.Tongsoluong </td>
        <td colspan="5"> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ </td>
    </tr>
    <tr style="font-weight: bold; color:blue; text-align:right ">
        <td colspan="9">
            @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang")
        </td>
    </tr>
    <tr style="font-weight: bold; color:blue; text-align:right ">
        <td colspan="9" align="center">
            <span class="gl-cta__content">@Html.ActionLink("ĐẶT HÀNG", "Dathang", "GioHang")</span>
        </td>

    </tr>
</table>
