@using SneakerWeb.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SanPham>

@{
    ViewBag.Title = "HOME";
    Layout = "~/Views/Shared/PageHome.cshtml";
}

<div class="colorlib-product">
    <zzzz>
        <img src="~/images/Title.jpg" style="max-width:100%">
    </zzzz>
    <div class="container">
        <div class="row">
            <div class="col-sm-8 offset-sm-2 text-center colorlib-heading">
                <h2>Sản phẩm</h2>
            </div>
        </div>
        @foreach (var item in Model)
        {

            <div class="col-lg-3 mb-4 text-center">
                <div class="product-entry border">
                    <a href="@Url.Action("ChiTiet","Home",new { id=item.MaSanPham})" class="prod-img">
                        <img src="~/images/@item.Images" class="img-fluid" />
                    </a>
                    <a>
                        @Html.DisplayFor(modelItem => item.TenSanPham)
                    </a>

                    <div class="desc">

                        <span class="price">
                            @String.Format("{0:0,0}", item.Gia)<u>đ</u>
                        </span>

                    </div>
                </div>
            </div>

        }

        @* Tao liên kết các trang  *@
        Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber) /@Model.PageCount;
        <div class="MenuTrang">

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
        </div>

        <style>
            .MenuTrang li {
                display: inline;
            }
        </style>

        <div class="row">
            <div class="col-sm-8 offset-sm-2 text-center colorlib-heading">
                <h2>Best Seller</h2>
            </div>
        </div>
        @foreach (var item in Model)
        {

            <div class="col-lg-3 mb-4 text-center">
                <div class="product-entry border">
                    <a href="@Url.Action("ChiTiet","Home",new { id=item.MaSanPham})" class="prod-img">
                        <img src="~/images/@item.Images" class="img-fluid" />
                    </a>
                    <a>
                        @Html.DisplayFor(modelItem => item.TenSanPham)
                    </a>

                    <div class="desc">

                        <span class="price">
                            @String.Format("{0:0,0}", item.Gia)<u>đ</u>
                        </span>

                    </div>
                </div>
            </div>

        }
    </div>
</div>

